{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "./dist/esm", //build for esm only, cjs is handled by tsup
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
, "tsconfig.cjs.json"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 